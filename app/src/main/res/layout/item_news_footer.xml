<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <!--TextView для даты-->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:lines="1"
        android:textColor="#909090"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="Date" />

    <!--Секция счетчика комментариев-->
    <RelativeLayout
        android:id="@+id/rl_comments"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_date"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">
        <!--для отображения нажатия нажатия на кнопку комментариев устанавливаем контейнер ^^^ для счетчика коментариев-->

        <!--TextView для иконки-->
        <TextView
            android:id="@+id/tv_comments_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:lines="1"
            android:text="@string/font_comment"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>
        
        <!--TextView для отображения значения счетчика-->
        <TextView
            android:id="@+id/tv_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7424"
            android:layout_alignTop="@+id/tv_comments_icon"
            android:layout_toRightOf="@+id/tv_comments_icon"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="#909090"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!--Секция счетчика репостов-->
    <RelativeLayout
        android:id="@+id/rl_reposts"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rl_comments"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">
        <!--для отображения нажатия нажатия на кнопку комментариев устанавливаем контейнер ^^^ для счетчика коментариев-->

        <!--TextView для иконки-->
        <TextView
            android:id="@+id/tv_reposts_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:lines="1"
            android:text="@string/font_repost"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>

        <!--TextView для отображения значения счетчика-->
        <TextView
            android:id="@+id/tv_reposts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7424"
            android:layout_alignTop="@+id/tv_reposts_icon"
            android:layout_toRightOf="@+id/tv_reposts_icon"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="#909090"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!--Секция счетчика лайков-->
    <RelativeLayout
        android:id="@+id/rl_likes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">
        <!--для отображения нажатия нажатия на кнопку комментариев устанавливаем контейнер ^^^ для счетчика коментариев-->

        <!--TextView для иконки-->
        <TextView
            android:id="@+id/tv_likes_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:lines="1"
            android:text="@string/font_heart"
            android:textColor="@color/colorIcon"
            android:textSize="16sp"/>

        <!--TextView для отображения значения счетчика-->
        <TextView
            android:id="@+id/tv_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7424"
            android:layout_alignTop="@+id/tv_likes_icon"
            android:layout_toRightOf="@+id/tv_likes_icon"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="#909090"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorDivider"/>


</RelativeLayout>